<!DOCTYPE html>

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title - Movie Library ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/SweetAlert2/css")
    @Styles.Render("~/Content/Icons/css")
    @Styles.Render("~/Content/Chosen/css")
    @Styles.Render("~/Content/site/css")
    @*@Styles.Render("~/Content/Datatable/css")*@

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="@Url.Action("Index", "MovieLibrary")">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="@Url.Action("About", "Home")">About</a>
                <a class="nav-item nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
            </div>
        </div>
    </nav>
    <br />
    <!-- End of Header -->
    <!-- Content Body -->
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <!-- End of Content Body -->
    <!-- Footer -->
    <footer class="page-footer font-small bg-dark text-white-50">
        <div class="footer-copyright text-center py-2">
            <small>Copyright &copy;  @DateTime.Now.Year - Movie Library ASP.NET Application</small>
        </div>
    </footer>
    <!-- End of Footer -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sweetalert2")
    @Scripts.Render("~/bundles/chosen")
    @*@Scripts.Render("~/bundles/datatable")*@

    @RenderSection("scripts", required: false)
</body>
</html>
